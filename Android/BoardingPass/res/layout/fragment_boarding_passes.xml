<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    android:weightSum="3.60" >

    <RelativeLayout
        android:id="@+id/re_details_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.45"
        android:background="#7C7C7C" >

        <LinearLayout
            android:id="@+id/re_top_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_layout_white"
            android:orientation="vertical"
            android:weightSum="3.60" >

            <RelativeLayout
                android:id="@+id/re_top_top_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.60" >

                <RelativeLayout
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/icon_bodaing_details" >

                    <TextView
                        android:id="@+id/tv_month_inside_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                       android:textColor="#7C7C7C"/>

                    <ImageView
                        android:id="@+id/img_icon_inner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_month_inside_icon"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_inner_bodaing_details" />

                    <TextView
                        android:id="@+id/tv_date_inside_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_icon_inner"
                        android:layout_centerHorizontal="true"
                        android:textColor="#7C7C7C" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_seat_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_icon"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                   android:textColor="#7C7C7C"
                   android:gravity="right"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_flight_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_seat_no"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                   android:textColor="#7C7C7C"
                   android:gravity="right"
                    android:textSize="19dp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/img_icon"
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2.40" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/tv_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:textColor="#7C7C7C"
                            android:textSize="19dp" />


                        <TextView
                            android:id="@+id/tv_cdg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_from"
                            android:textColor="#2D3E50"
                            android:textSize="32dp"
                            android:textStyle="bold" />
                        
                        
                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_cdg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                           android:textColor="#7C7C7C"
                            android:textSize="17dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4" >

                        <ImageView
                            android:id="@+id/im_plane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_plane" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/tv_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                           android:textColor="#7C7C7C"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/tv_jfk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_to"
                            android:textColor="#2D3E50"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_arrival_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_jfk"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                          android:textColor="#7C7C7C"
                            android:textSize="17dp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/le_top_bottom_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2" >

                <Button
                    android:id="@+id/btn_seatmate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="3dp"
                     android:textSize="18dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_seatmate_button"
                    android:text="@string/txt_seatmate" />

                <Button
                    android:id="@+id/btn_boarding_pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:background="@drawable/rounded_seatmate_button"
                    android:text="@string/txt_boarding_pass" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_list_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_layout_white" >

        <ListView
            android:id="@+id/lv_boarding_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="5dp"
            android:divider="#4db8db"
            android:dividerHeight="0.5dp" >
        </ListView>
    </RelativeLayout>

</LinearLayout>