<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_details_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout_edittext"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:text="Your current status"
            android:textColor="#7C7C7C"
            android:textSize="18dp" />

        <View
            android:id="@+id/ve_gap"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_status"
            android:layout_marginTop="4dp"
            android:background="#7C7C7C" />

        <EditText
            android:id="@+id/et_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Status" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/et_status"
            android:layout_below="@+id/et_status"
            android:layout_marginTop="10dp"
            android:text="70"
            android:textColor="#7C7C7C" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_list_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_layout_edittext" >

        <TextView
            android:id="@+id/tv_chose_new_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:text="Choose your new status"
            android:textColor="#7C7C7C"
            android:textSize="18dp" />
        
        
          <View
            android:id="@+id/ve_gap2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_chose_new_status"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:background="#7C7C7C" />

        <ListView
            android:id="@+id/lv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ve_gap2"
            android:divider="#7C7C7C"
            android:dividerHeight="0.5dp" >
        </ListView>
    </RelativeLayout>

</LinearLayout>