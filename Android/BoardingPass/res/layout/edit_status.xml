<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/tvHeadEditStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Edit your status"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#33B5E5"
        android:textSize="20sp" />

    <View
        android:id="@+id/ve_mid"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5" />

    <EditText
        android:id="@+id/etStatusUpdate"
        style="@android:style/Theme.Holo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Your status goes here"
        android:padding="14dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnApplyStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_round_blue"
        android:padding="10dp"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>