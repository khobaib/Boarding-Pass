<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="YOUR IDEAL SEATMATE"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="This becomes relvant for more features in the premium app."
            android:textColor="@color/black_transparent_back"
            android:textSize="13dp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_sub_header"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/black_transparent_back" />

        <TextView
            android:id="@+id/tv_op_same_generation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:layout_margin="10dp"
            android:text="Belongs to your generation"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_op_same_generation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_op_same_generation"
            android:layout_alignBottom="@+id/tv_op_same_generation"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tv_op_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_same_generation"
            android:layout_margin="10dp"
            android:text="Speaks Language"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_op_laguage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_op_language"
            android:layout_alignBottom="@+id/tv_op_language"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tv_op_industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_language"
            android:layout_margin="10dp"
            android:text="Works in your industry"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_op_industry"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_op_industry"
            android:layout_alignBottom="@+id/tv_op_industry"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tv_op_hobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_industry"
            android:layout_margin="10dp"
            android:text="Shares hobbies with you"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_op_industry"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_op_hobbies"
            android:layout_alignBottom="@+id/tv_op_hobbies"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tv_op_religion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_hobbies"
            android:layout_margin="10dp"
            android:text="Same religion as you"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_op_religion"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_op_religion"
            android:layout_alignBottom="@+id/tv_op_religion"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tv_op_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_religion"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Preferred gender"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pref_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_op_gender"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Male"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pref_gender"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Your seating preferences"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_header2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/black_transparent_back" />

        <TextView
            android:id="@+id/tv_seating_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:text="Prefer to relax"
            android:textColor="@color/black_transparent_back"
            android:textSize="15dp" />
    </RelativeLayout>

</ScrollView>