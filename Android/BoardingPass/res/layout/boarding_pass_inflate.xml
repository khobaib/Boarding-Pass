<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/tv_jfk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/txt_jfk"
        android:textColor="#2D3E50"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_jfk"
        android:text="24.00"
        android:textColor="#7C7C7C"
        android:textSize="17sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_cdg"
        android:layout_below="@+id/tv_cdg"
        android:text="22.00"
        android:textColor="#7C7C7C"
        android:textSize="17sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_flight_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_flight_to_from"
        android:layout_marginTop="5dp"
        android:text="Aprl 22 AfGh"
        android:textColor="#7C7C7C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_seat_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_flight_date"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_seat_nno"
        android:textColor="#7C7C7C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_flight_to_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv_cdg"
        android:layout_marginRight="3dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/tv_cdg"
        android:textColor="#2D3E50"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_cdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/tv_jfk"
        android:text="@string/txt_cdg"
        android:textColor="#2D3E50"
        android:textSize="32sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:background="#4db8db" />

</RelativeLayout>