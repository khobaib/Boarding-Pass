<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    >

   <RelativeLayout 
        android:id="@+id/re_errorshow"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="center_horizontal"
         android:background="#ffffff"
       >
       
        <TextView 
        android:id="@+id/tv_errorshow"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:ems="10"
       android:gravity="center_horizontal"
        android:text="@string/txt_no_pastbpass"
        android:background="@drawable/rounded_button_loginfailure"
        android:textColor="#777777"
        />
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_list_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
         android:visibility="gone"
        
        android:background="@drawable/rounded_layout_white" >

        <ListView
            android:id="@+id/lv_boarding_past_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="5dp"
            android:divider="#4db8db"
            android:dividerHeight="0.5dp" >
        </ListView>
    </RelativeLayout>

</LinearLayout>