<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/txt_welcome"
        android:textColor="#EE2654"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/le_ad_boardingpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tv_add_boardingpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/txt_add_boardingpass"
            android:textColor="#777777"
            android:textSize="17dp"
            tools:ignore="Suspicious0dp" />

        <ImageView
            android:id="@+id/img_add_boardingpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_add_boardingpass" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/le_ad_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/le_ad_boardingpass"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_addprofile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_add_profile" />

        <TextView
            android:id="@+id/tv_add_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/txt_say_to_register"
            android:textColor="#777777"
            android:textSize="17dp"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>

</RelativeLayout>